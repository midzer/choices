{
  "compilerOptions": {
    "baseUrl": "/",
    "outDir": "./dist/",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./public/types/",
    "declarationMap": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "types": ["cypress"],
    "newLine": "lf"
  },
  "include": ["./src/**/*", "./cypress/**/*"]
}
